# --- Twilio Credentials (Optional - for SMS Alerts) ---
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number
ADMIN_PHONE_NUMBER=your_personal_phone_number

# --- Gmail Credentials (for Email Alerts) ---
# Use a Gmail App Password, NOT your login password.
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_16_digit_app_password
ADMIN_EMAIL=receiver_email@gmail.com

# --- Alert Cooldowns (in seconds) ---
SMS_ALERT_COOLDOWN=300
BEEP_ALERT_COOLDOWN=2

# --- Camera Configuration ---
# Use '0' for a USB Webcam, or an RTSP URL for an IP Camera
IP_CAMERA_URL=0

# --- Tuning Parameters ---
MIN_CONTOUR_AREA=500
FACE_REC_FRAME_SKIP=5
DETECTION_THRESHOLD_FRAMES=15
PATIENCE_SECONDS=7

# Django Security
DJANGO_SECRET_KEY=your_secret_key_here